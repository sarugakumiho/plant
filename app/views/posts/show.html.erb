<div class="container">
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      
      <div class='col-md-3'>
        <h3><i class="fa-solid fa-book-open"></i>Post詳細</h3>
        <%= render 'users/info', user: current_user %>
      </div>
        
      <div class='col-md-8 offset-md-1'>
        <table class='table'>
          <thead>
            <tr>
              <th>Userimage</th>
              <th>Username</th>
              <th>Image</th>
              <th>Title</th>
              <th>Thoughts</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag @post.user.get_profile_image(100,100), style: "border-radius: 50%; width: 100px; height: 100px; object-fit:cover;" %></td>
              <td><%= @post.user.name %></td>
              <td><%= image_tag @post.get_image(100,100) %></td>
              <td><%= @post.title %></td>
              <td><%= @post.body %></td>
              <td>
                <% if @post.user == current_user %>
                  <%= link_to "編集へ", edit_post_path, class: "btn btn-sm btn-success" %>
                  <%= link_to "削除", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      
    
    </div>
  </div>
</div>