<table class="table table-hover table-inverse">
    
  <% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>Profileimage</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100, 100) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
    
  <% else %>
    
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Thoughts</th>
      </tr>
    <tbody>
    <h2>Posts search for "<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(100, 100) %>
          <% end %>
        </td>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
  
</table>