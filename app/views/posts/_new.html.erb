<h1>〜投稿フォーム〜</h1>

<%= form_with model:@post_new, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :Image %><br />
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :Title %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control post_title" %>
  </div>
  <div class="form-group">
    <%= f.label :Body %><br />
    <%= f.text_area :body, autofocus: true, class: "form-control post_body" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿", class: "btn btn-sm btn-success", class: "btn btn-success" %>
  </div>
<% end %>